<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:binding="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="com.youwu.shopowner.ui.set_up.StoreSetUpViewModel"/>
        <import type="android.view.View"/>

        <variable
            name="viewModel"
            type="StoreSetUpViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/top_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_45dp"
            android:background="@drawable/bg_white_bottom"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/fanhui_img_30dp"
                android:layout_height="@dimen/fanhui_img_30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/size_10dp"
                android:padding="@dimen/size_3dp"
                android:src="@mipmap/fanhui"
                binding:onClickCommand="@{viewModel.returnOnClick}"
                />

            <TextView
                android:id="@+id/text_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="门店设置"
                android:textColor="@color/md_black_1000"
                android:textSize="@dimen/size_16dp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F4F8FB"
            android:orientation="vertical"
            >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/size_10dp"

            android:paddingTop="@dimen/size_20dp"
            android:paddingBottom="@dimen/size_20dp"
            android:paddingRight="@dimen/size_15dp"
            android:paddingLeft="@dimen/size_15dp"
            android:background="@drawable/radius_white_10dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="自动接单："
                    android:textSize="@dimen/size_14dp"
                    android:textColor="@color/main_black_85"
                    android:layout_gravity="center"
                    />
                <RadioGroup
                    android:id="@+id/hide_radius_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/hide_radius_yes"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="是"
                        android:clickable="true"
                        android:layout_weight="1"
                        android:textSize="12sp" />

                    <RadioButton
                        android:id="@+id/hide_radius_no"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:background="@null"
                        android:text="否"
                        android:layout_weight="1"
                        android:textSize="12sp" />

                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/size_15dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="营业时间："
                    android:textColor="@color/main_black_85"
                    android:layout_gravity="center"
                    android:textSize="@dimen/size_14dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_45dp"
                    android:background="@drawable/radius_hui_xian_5dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingRight="@dimen/size_25dp"
                        android:paddingLeft="@dimen/size_25dp"
                        android:layout_marginRight="@dimen/size_5dp"
                        binding:onClickCommand="@{viewModel.StateOnClick}"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@={viewModel.start_time}"
                            android:hint="开始时间"
                            android:textSize="@dimen/size_14dp"
                            android:layout_gravity="center"
                            android:textColor="@color/main_black"
                            />


                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="至"
                        android:textSize="@dimen/size_14dp"
                        android:textColor="@color/main_black"
                        android:layout_gravity="center"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingRight="@dimen/size_25dp"
                        android:paddingLeft="@dimen/size_25dp"
                        android:layout_marginLeft="@dimen/size_5dp"
                        binding:onClickCommand="@{viewModel.EndOnClick}"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@={viewModel.end_time}"
                            android:hint="结束时间"
                            android:textSize="@dimen/size_14dp"
                            android:layout_gravity="center"
                            android:textColor="@color/main_black"
                            />


                    </LinearLayout>



                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_0_5dp"
                android:background="@color/color_hui"
                android:layout_marginTop="@dimen/dp8"
                android:layout_marginBottom="@dimen/size_8dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_40dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="飞鹅打印"
                    android:textColor="@color/main_black_85"
                    android:layout_gravity="center"
                    android:textSize="@dimen/size_14dp"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    />
                <com.kyleduo.switchbutton.SwitchButton
                    android:id="@+id/switch_btn_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/size_10dp"
                    app:kswThumbHeight="20dp"
                    app:kswThumbWidth="20dp"
                    app:kswBackColor="#a9a9a9"
                    app:kswTextAdjust="-2dp"
                    app:kswTextExtra="18dp"
                    app:kswThumbRadius="45dp"
                    app:kswThumbColor="@color/white"
                    app:kswBackRadius="45dp"
                    android:layout_alignParentRight="true"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:visibility="@{viewModel.state?View.VISIBLE:View.GONE}"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Key值"
                    android:textColor="@color/main_black_85"
                    android:layout_gravity="center"
                    android:textSize="@dimen/size_14dp"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    />
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="请输入Key值"
                    android:text="@={viewModel.KeyName}"
                    android:textColor="@color/textColor"
                    android:gravity="right|center"
                    android:textColorHint="@color/textColorHint"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp40"
                android:orientation="horizontal"
                android:visibility="@{viewModel.state?View.VISIBLE:View.GONE}"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Value值"
                    android:textColor="@color/main_black_85"
                    android:layout_gravity="center"
                    android:textSize="@dimen/size_14dp"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    />
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="请输入Value值"
                    android:text="@={viewModel.ValueName}"
                    android:gravity="right|center"
                    android:textColor="@color/textColor"
                    android:textColorHint="@color/textColorHint"
                    android:textSize="16sp" />
            </LinearLayout>

            
        </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_48dp"
                android:orientation="horizontal"

                android:layout_marginTop="@dimen/size_15dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="重置"
                    android:textSize="@dimen/size_14dp"
                    android:textColor="@color/main_black_85"
                    android:background="@drawable/radius_hui_xian_5dp"
                    android:gravity="center"
                    android:layout_marginStart="@dimen/size_5dp"
                    android:layout_marginEnd="@dimen/size_5dp"
                    binding:onClickCommand="@{viewModel.ResetOnClick}"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="确认"
                    android:textSize="@dimen/size_14dp"
                    android:textColor="@color/main_white"
                    android:background="@drawable/radius_blue_8dp"
                    android:gravity="center"
                    android:layout_marginStart="@dimen/size_5dp"
                    android:layout_marginEnd="@dimen/size_5dp"
                    binding:onClickCommand="@{viewModel.ConfirmOnClick}"
                    />

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</layout>